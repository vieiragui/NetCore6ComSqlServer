@model IEnumerable<BlogSemEntity.Models.Usuario>

@{
    ViewData["Title"] = "Home Page";
}


<div>
    <a href="home/adicionar">
        <button type="button" class="btn btn-primary">Adicionar</button>
    </a>

    <div id="messageStatus" class="alert alert-success" role="alert" style="display: none;" messageAlert>
        <span message></span>
    </div>
<form method="post" asp-action="remover" asp-controller="home">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal"
                    onclick="atualizar(this)">Atualizar</button>
                    <button type="button" onclick="remover(this)" class="btn btn-danger">Remover</button>
                </td>
            </tr>
        }
    </table>
</form>

    <partial name="_ModalAtualizar" />
</div>